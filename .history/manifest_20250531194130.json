{
  "manifest_version": 3,
  "name": "Smart Tab Auto-Grouper",
  "version": "1.0.0",
  "description": "Automatically groups tabs into Gmail and AI categories",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.gmail.com/*",
    "*://*.google.com/*",
    "*://*.openai.com/*",
    "*://*.perplexity.ai/*",
    "*://gemini.google.com/*",
    "*://bard.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Auto-Grouper Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
