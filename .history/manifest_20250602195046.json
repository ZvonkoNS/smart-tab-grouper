{
  "manifest_version": 3,
  "name": "Smart Tab Auto-Grouper",
  "version": "1.1.0",
  "description": "Automatically organizes tabs into Gmail and AI groups for better browsing productivity",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.gmail.com/*",
    "*://mail.google.com/*",
    "*://*.google.com/*",
    "*://*.openai.com/*",
    "*://chat.openai.com/*",
    "*://chatgpt.com/*",
    "*://*.perplexity.ai/*",
    "*://perplexity.ai/*",
    "*://gemini.google.com/*",
    "*://bard.google.com/*",
    "*://ai.google.dev/*",
    "*://makersuite.google.com/*",
    "*://aistudio.google.com/*",
    "*://*.anthropic.com/*",
    "*://claude.ai/*",
    "*://*.huggingface.co/*",
    "*://*.jasper.ai/*",
    "*://*.copy.ai/*",
    "*://*.midjourney.com/*",
    "*://*.stability.ai/*",
    "*://*.character.ai/*",
    "*://*.elevenlabs.io/*",
    "*://*.cursor.sh/*",
    "*://*.notion.so/*",
    "*://*.writesonic.com/*",
    "*://*.leonardo.ai/*",
    "*://*.runwayml.com/*",
    "*://*.synthesia.io/*",
    "*://*.murf.ai/*",
    "*://*.codeium.com/*",
    "*://*.otter.ai/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Tab Auto-Grouper",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
